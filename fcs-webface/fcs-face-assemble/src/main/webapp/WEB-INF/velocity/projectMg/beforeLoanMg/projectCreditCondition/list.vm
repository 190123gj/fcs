<!DOCTYPE html>
<html lang="zh-cmn-Hans">
<head>
#parse("/layout/common/head.vm")
<link type="text/css" href="/styles/tmbp/project1.css" rel="stylesheet">
<title>授信条件落实情况列表</title>
</head>
<body>

<div class="ui-breadcrumb">
    &nbsp;项目管理&nbsp;&gt;&nbsp;授信前管理&nbsp;&gt;&nbsp;授信条件落实情况列表
</div>

<form class="m-main border ui-bg-fff" action="/projectMg/projectCreditCondition/list.htm" id="fnListSearchForm" method="POST">

    ## search start

    <div class="m-search fn-clear">

        <div class="item">
            项目编号
            <input class="ui-text fn-w90" type="text" name="projectCode" value="$!{conditions.projectCode}">
        </div>

        <div class="item">
            客户名称
            <input class="ui-text fn-w90" type="text" name="customerName" value="$!{conditions.customerName}">
        </div>

        <div class="item">
            业务品种
            <input class="ui-text fn-w160" type="text" name="busiTypeName" value="$!{conditions.busiTypeName}" id="businessTypeName">
            <input type="hidden" name="busiType" value="$!{conditions.busiType}" id="businessTypeCode">
            <a href="javascript:void(0);" class="ui-btn ui-btn-fill ui-btn-blue" id="businessTypeBtn">选择</a>
            <a href="javascript:void(0);" class="ui-btn ui-btn-fill ui-btn-gray fnListSearchClear">清除</a>
        </div>

        <div class="item">
            <a class="ui-btn ui-btn-fill ui-btn-seek" id="fnListSearchBtn">搜索</a>
        </div>
        
    </div>

    ## search end

    <div class="fn-pl15 fn-pr15">
        
        #if($!permissionUtil.checkPermission("/projectMg/projectCreditCondition/addProjectCreditCondition.htm"))
            <div class="fn-mb20 fn-mt20">
                <a class="ui-btn ui-btn-fill ui-btn-green-empty" href="/projectMg/projectCreditCondition/addProjectCreditCondition.htm"><b>＋</b>新增授信条件落实情况&nbsp;</a>
            </div>
        #else
             <div class="fn-blank20"></div>
        #end
        ## list start

        <table class="m-table m-table-list fn-tac" id="list">

            <thead>
                <tr id="fnListSearchTh">
                    <th sortcol="p.project_code">项目编号</th>
                    <th sortcol="p.project_name">客户名称</th>
                    <th sortcol="p.busi_type_name">业务品种</th>
                    <th sortcol="f.raw_add_time">提交时间</th>
                    <th sortcol="f.status">审批状态</th>
                    <th sortcol="f.user_name">客户经理</th>
                    <th width="80px">操作</th>
                </tr>
            </thead>
            <tbody>
                
                #foreach($!item in $!page.result)

                    <tr formid="$item.formId" formname="$item.projectCode">
                        <td>$!item.projectCode</a></td>
                        <td>$!item.customerName</td>
                        <td>$!item.busiTypeName </td>
                        <td>
                            #if($!item.formAddTime)
                                $!dateUtil.simpleFormat($!item.formAddTime)
                            #else
                                $!dateUtil.simpleFormat($!item.formUpdateTime)
                            #end
                        </td>
                        <td>
                            #if($!item.formStatus.code != "APPROVAL" && $!item.detailStatus && $!item.detailStatus != "")
                                $!item.detailStatus
                            #else
                                $!item.formStatus.message
                            #end
                        </td>
                        <td>$!item.formUserName</td>
                        <td>
                            <a href="/projectMg/projectCreditCondition/viewProjectCreditCondition.htm?formId=$!{item.formId}">[ 查看详情 ]</a>

                            #if($!item.formStatus.code == "DRAFT" && $!sessionLocal.userId == $!item.formUserId && $!item.projectStatus.code != 'PAUSE')
                                <br><a href="/projectMg/projectCreditCondition/editProjectCredit.htm?formId=$!item.formId" class="fnToEdit">[ 编辑 ]</a>
                                <br><a href="javascript:void(0);" class="fnOPN del">[ 删除 ]</a>
                            #elseif($!item.formStatus == "SUBMIT" && $!sessionLocal.userId == $!item.formUserId && $!item.projectStatus.code != 'PAUSE')
                                <br><a href="javascript:void(0);" class="fnOPN withdraw">[ 撤回 ]</a>
                            #elseif(($!item.formStatus.code == "CANCEL" || $!item.formStatus.code == "BACK") && $!sessionLocal.userId == $!item.formUserId && $!item.projectStatus.code != 'PAUSE')
                                <br><a href="/projectMg/projectCreditCondition/editProjectCredit.htm?formId=$!item.formId">[ 重新申请 ]</a>
                                <br><a href="javascript:void(0);" class="fnOPN del newDel">[ 删除 ]</a>
							#elseif($!item.formStatus.code == "END")
								<br><a href="javascript:void(0);" class="fnOPN del">[ 删除 ]</a>						
                            #end
                            
                            #set($processUrl = "")
                            #if($!stringUtil.isNotBlank($item.taskUserData))
                                #set($processUrl = $formUtil.getProcessUrl($!item.taskUserData,$!sessionLocal.userId))
                            #end
                            #if($!stringUtil.isNotBlank($processUrl) && $!item.projectStatus.code != 'PAUSE')
                                <br><a href="$!processUrl">[ 处理 ]</a>
                            #end
                            
                            ## #if($!item.busiType)
                            ## <a href="/projectMg/projectCreditCondition/editProjectCredit.htm?formId=$!{item.formId}" >编辑</a>
                            ## #else
                            ##  <a href="/projectMg/projectIssueInformation/viewProjectIssueInformation.htm?projectCode=$!{item.projectCode}" >发行通知书打印</a>
                            ## #end
                        </td>
                    </tr>

                #end

            </tbody>
        </table>

        ## list end

        ## page start

        #parse("/layout/common/pages.vm")

        ## page end

    </div>

</form>

#parse("/layout/common/footer.vm")
#parse("/layout/common/commonjs.vm")

<script>
    seajs.use($_GLOBAL.zyw+'/project/bfcg.rkrv.list');
</script>

</body>
</html>